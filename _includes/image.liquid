<div class="outer">
  <figure class="image">
    <img src="{{ include.url }}" alt="{{ include.description }}">
    <figcaption>{{ include.description }}</figcaption>
    <br>
  </figure>
</div>

<style>
  .outer {
    display: block;
    text-align: center;
    max-width: 100%;
  }

  .image {
    display: inline-block;
    max-width: 100%;
    margin: 0 auto; /* Center the figure */
  }

